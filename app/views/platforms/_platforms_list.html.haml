%br
- if @platforms.size == 0
  %p
    No platforms found...
- else
  %p
    = found_count("platforms", @platforms)
  %p
  - if @platforms.total_pages > 1
    = render(:partial => "shared/pagination", :locals => {:items => @platforms})
  %br
  %table{:width => "100%", :border => "0", :cellpadding => "0", :cellspacing => "2"}
    %thead
      %tr.rowHeader
        %td{:width => "20%"}
          %b
            GEO accession
        %td{:width => "20%"}
          %b
            Organism
        %td{:width => "60%"}
          %b
            Title
    %tbody#staffTable
      = render(:partial => "platform", :collection => @platforms)
