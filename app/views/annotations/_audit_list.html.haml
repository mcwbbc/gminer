%br
- if @annotations.size == 0
  %p
    No matching annotations found...
- else
  %p
    = found_count("annotations", @annotations)
  %p
    = render(:partial => "shared/pagination_links", :locals => {:items => @annotations})
  %br
    %span.validate-all
      Validate checked
    %span.invalidate-all
      Invalidate checked
  %br
  %br
  %table{:width => "100%", :border => "0", :cellpadding => "0", :cellspacing => "2"}
    %thead
      %tr.rowHeader
        %td{:width => "5%", :align => 'center'}
          %b
            Selected
            %br
            = link_to("All", "#", :class => "check-all")
            = link_to("None", "#", :class => "uncheck-all")
        %td{:width => "10%"}
          %b
            GEO Accession
        %td{:width => "25%"}
          %b
            Term
        %td{:width => "60%"}
          %b
            Field value context
    %tbody#staffTable
      = render(:partial => "audit_annotation", :collection => @annotations)
